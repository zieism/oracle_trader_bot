# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false

# Database Configuration
POSTGRES_SERVER=postgres-prod.internal
POSTGRES_PORT=5432
POSTGRES_USER=trader_prod
POSTGRES_PASSWORD=production-ultra-secure-password
POSTGRES_DB=oracle_trader_production

# Redis Configuration
REDIS_URL=redis://redis-prod.internal:6379

# Trading Configuration (Production)
SYMBOLS_TO_TRADE_BOT=["BTC/USDT:USDT", "ETH/USDT:USDT", "ADA/USDT:USDT", "DOT/USDT:USDT"]
PRIMARY_TIMEFRAME_BOT=1h
LOOP_SLEEP_DURATION_SECONDS_BOT=300
FIXED_USD_AMOUNT_PER_TRADE=100.0
BOT_DEFAULT_LEVERAGE=5

# Exchange API Keys (Production - ENCRYPTED)
BINANCE_API_KEY=encrypted:production-binance-key
BINANCE_SECRET_KEY=encrypted:production-binance-secret
COINBASE_API_KEY=encrypted:production-coinbase-key
COINBASE_SECRET_KEY=encrypted:production-coinbase-secret
COINBASE_PASSPHRASE=encrypted:production-coinbase-passphrase
KRAKEN_API_KEY=encrypted:production-kraken-key
KRAKEN_SECRET_KEY=encrypted:production-kraken-secret

# Monitoring
PROMETHEUS_PORT=8001
GRAFANA_URL=http://grafana-prod.internal:3000

# Kubernetes
KUBERNETES_NAMESPACE=oracle-trader

# Security
ENCRYPTION_KEY=production-encryption-key-32-chars

# Logging
LOG_LEVEL=WARNING

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_LIMIT_PERIOD=3600

# Performance
MAX_CONCURRENT_TRADES_BOT_CONFIG=5
MAX_WORKERS=4