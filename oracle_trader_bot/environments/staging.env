# Staging Environment Configuration
ENVIRONMENT=staging
DEBUG=false

# Database Configuration
POSTGRES_SERVER=postgres-staging.internal
POSTGRES_PORT=5432
POSTGRES_USER=trader_staging
POSTGRES_PASSWORD=staging-secure-password
POSTGRES_DB=oracle_trader_staging

# Redis Configuration
REDIS_URL=redis://redis-staging.internal:6379

# Trading Configuration (Staging)
SYMBOLS_TO_TRADE_BOT=["BTC/USDT:USDT", "ETH/USDT:USDT"]
PRIMARY_TIMEFRAME_BOT=1h
LOOP_SLEEP_DURATION_SECONDS_BOT=300
FIXED_USD_AMOUNT_PER_TRADE=5.0
BOT_DEFAULT_LEVERAGE=3

# Exchange API Keys (Testnet/Sandbox)
BINANCE_API_KEY=staging-binance-key
BINANCE_SECRET_KEY=staging-binance-secret
COINBASE_API_KEY=staging-coinbase-key
COINBASE_SECRET_KEY=staging-coinbase-secret
COINBASE_PASSPHRASE=staging-coinbase-passphrase
KRAKEN_API_KEY=staging-kraken-key
KRAKEN_SECRET_KEY=staging-kraken-secret

# Monitoring
PROMETHEUS_PORT=8001
GRAFANA_URL=http://grafana-staging.internal:3000

# Kubernetes
KUBERNETES_NAMESPACE=oracle-trader-staging

# Logging
LOG_LEVEL=INFO