# Oracle Trader Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DOMAIN=your-domain.com
COMPOSE_PROJECT_NAME=oracle-trader

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# Generate with: openssl rand -base64 32
SECRET_KEY=your-super-secret-key-here-generate-with-openssl
API_SECRET_KEY=your-api-secret-key-here-generate-with-openssl

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=trader
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=oracle_trader
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432

# Optional: Custom database URL (overrides above settings)
# DATABASE_URL=postgresql://trader:password@postgres:5432/oracle_trader
# ASYNC_DATABASE_URL=postgresql+asyncpg://trader:password@postgres:5432/oracle_trader

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://redis:6379

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================
# KuCoin Exchange
KUCOIN_API_KEY=your-kucoin-api-key
KUCOIN_SECRET_KEY=your-kucoin-secret-key
KUCOIN_PASSPHRASE=your-kucoin-passphrase
KUCOIN_SANDBOX=false

# Binance Exchange
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=false

# Kraken Exchange
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_SECRET_KEY=your-kraken-secret-key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
GRAFANA_SECRET_KEY=your-grafana-secret-key

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Application Metrics
PROMETHEUS_METRICS_PORT=8001

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-url

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Server Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE=2

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Trading Configuration
DEFAULT_TRADING_ENABLED=false
DEFAULT_PAPER_TRADING=true
DEFAULT_RISK_PERCENTAGE=1.0
DEFAULT_MAX_POSITIONS=5

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# Model Configuration
AI_MODEL_PATH=/app/models
AI_RETRAIN_INTERVAL=24
AI_PREDICTION_CONFIDENCE_THRESHOLD=0.7

# External AI APIs (Optional)
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# =============================================================================
# DATA SOURCES
# =============================================================================
# Alpha Vantage for market data
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# News API for sentiment analysis
NEWS_API_KEY=your-news-api-key

# Twitter API for social sentiment (Optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Reddit API for social sentiment (Optional)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=oracle-trader-bot

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email Notifications (SMTP)
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=notifications@yourdomain.com

# Telegram Notifications (Optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Slack Notifications (Optional)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Discord Notifications (Optional)
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# AWS S3 for remote backups (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# Let's Encrypt Settings
LETSENCRYPT_EMAIL=your-email@domain.com
LETSENCRYPT_STAGING=false

# Custom SSL (if not using Let's Encrypt)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_STORAGE=redis
RATE_LIMIT_STRATEGY=sliding_window

# =============================================================================
# DEVELOPMENT/DEBUG (Set to false in production)
# =============================================================================
DEBUG=false
TESTING=false
ENABLE_SWAGGER=false
ENABLE_REDOC=false

# =============================================================================
# MISCELLANEOUS
# =============================================================================
# Timezone
TIMEZONE=UTC

# Language/Locale
LOCALE=en_US.UTF-8

# Application Name/Version
APP_NAME=Oracle Trader Bot
APP_VERSION=1.0.0