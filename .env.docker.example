# .env.example - Docker Compose Environment Variables
# Copy this file to .env and customize the values

# ==================== APPLICATION CONFIGURATION ====================
PROJECT_NAME=Oracle Trader Bot
VERSION=2.0.0
DEBUG=false

# Startup mode: lite (file-based) or full (database)
APP_STARTUP_MODE=full
SKIP_DB_INIT=false

# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL settings
POSTGRES_DB=oracle_trader_bot
POSTGRES_USER=oracle_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# ==================== REDIS CONFIGURATION (OPTIONAL) ====================
# Redis settings for rate limiting
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# ==================== SECURITY CONFIGURATION ====================
# Optional admin token for settings endpoints (leave empty to disable)
ADMIN_API_TOKEN=your_secure_admin_token_here

# Optional encryption key for settings (32+ characters, leave empty to disable)
SETTINGS_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Rate limiting settings
SETTINGS_RATE_LIMIT=10/min
HEALTH_RATE_LIMIT=30/min

# Security headers (true/false)
SECURITY_HEADERS_X_CONTENT_TYPE_OPTIONS=true
SECURITY_HEADERS_X_FRAME_OPTIONS=true
SECURITY_HEADERS_REFERRER_POLICY=true
SECURITY_HEADERS_STRICT_TRANSPORT_SECURITY=true
SECURITY_HEADERS_CONTENT_SECURITY_POLICY=false

# ==================== EXCHANGE API CONFIGURATION ====================
# KuCoin API credentials (leave empty for no-auth mode)
KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_API_SECRET=your_kucoin_api_secret
KUCOIN_API_PASSPHRASE=your_kucoin_passphrase
KUCOIN_SANDBOX=true

# ==================== SERVER CONFIGURATION ====================
# Server configuration
SERVER_PUBLIC_IP=localhost
API_INTERNAL_BASE_URL=http://backend:8000

# Frontend URLs (used during build)
VITE_API_BASE_URL=http://localhost/api/v1
VITE_WS_BASE_URL=ws://localhost/api/v1

# ==================== NGINX CONFIGURATION ====================
# Nginx ports
NGINX_PORT=80
NGINX_SSL_PORT=443

# ==================== PRODUCTION OVERRIDES ====================
# For production deployment, override these values:

# Production database (use managed database service)
# POSTGRES_SERVER=your-db-host.amazonaws.com
# POSTGRES_PORT=5432
# POSTGRES_DB=oracle_trader_prod
# POSTGRES_USER=oracle_prod_user
# POSTGRES_PASSWORD=very_secure_production_password

# Production Redis (use managed Redis service)
# REDIS_URL=redis://your-redis-host.amazonaws.com:6379/0

# Production security
# ADMIN_API_TOKEN=very_secure_production_admin_token
# SETTINGS_ENCRYPTION_KEY=production_32_character_key_here
# DEBUG=false

# Production server
# SERVER_PUBLIC_IP=your-production-domain.com
# VITE_API_BASE_URL=https://your-production-domain.com/api/v1
# VITE_WS_BASE_URL=wss://your-production-domain.com/api/v1

# SSL/TLS (when using HTTPS)
# NGINX_SSL_PORT=443
# SSL certificate paths would be mounted as volumes
