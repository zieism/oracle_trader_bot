# Test environment configuration
PROJECT_NAME=Oracle Trader Bot
VERSION=1.0.0
DEBUG=false

# Startup mode
APP_STARTUP_MODE=full
SKIP_DB_INIT=false

# Database
POSTGRES_DB=oracle_trader_bot
POSTGRES_USER=oracle_user
POSTGRES_PASSWORD=test_postgres_pass
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=test_redis_pass
REDIS_PORT=6379
REDIS_URL=redis://:test_redis_pass@redis:6379/0

# Security (no admin token for initial test)
ADMIN_API_TOKEN=
SETTINGS_ENCRYPTION_KEY=

# Rate limiting
SETTINGS_RATE_LIMIT=10/min
HEALTH_RATE_LIMIT=30/min

# Security headers
SECURITY_HEADERS_X_CONTENT_TYPE_OPTIONS=true
SECURITY_HEADERS_X_FRAME_OPTIONS=true
SECURITY_HEADERS_REFERRER_POLICY=true
SECURITY_HEADERS_STRICT_TRANSPORT_SECURITY=true
SECURITY_HEADERS_CONTENT_SECURITY_POLICY=false

# Exchange (sandbox mode)
KUCOIN_API_KEY=
KUCOIN_API_SECRET=
KUCOIN_API_PASSPHRASE=
KUCOIN_SANDBOX=true

# Server
SERVER_PUBLIC_IP=localhost
API_INTERNAL_BASE_URL=http://backend:8000

# Frontend URLs
VITE_API_BASE_URL=http://localhost/api/v1
VITE_WS_BASE_URL=ws://localhost/api/v1

# CORS Configuration - Exact origin allowlist (no wildcards with credentials=true)
FRONTEND_ORIGINS=http://localhost:5173,https://oracletrader.app,https://www.oracletrader.app
WS_ORIGINS=ws://localhost:5173,wss://oracletrader.app,wss://www.oracletrader.app

# Nginx ports
NGINX_PORT=80
NGINX_SSL_PORT=443